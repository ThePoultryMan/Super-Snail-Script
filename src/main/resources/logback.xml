<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <property name="LOG_DIR" value="./logs" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} %boldGreen(%logger{36}) %highlight(%-5level) : %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_DIR}/latest-debug.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>${LOG_DIR}/%d{yyyy-MM-dd-hh-mm-ss}.%i.log.gz</FileNamePattern>
            <MaxHistory>30</MaxHistory>
            <maxFileSize>100MB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{HH:mm:ss.SSS} %logger{36} %-5level : %msg%n</Pattern>
        </encoder>
    </appender>

    <appender name="USER_LOG" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <File>${LOG_DIR}/latest-script-output.log</File>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <FileNamePattern>${LOG_DIR}/%d{yyyy-MM-dd-hh-mm-ss}-script-output.%i.log.gz</FileNamePattern>
            <MaxHistory>15</MaxHistory>
            <maxFileSize>15MB</maxFileSize>
        </rollingPolicy>
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <Pattern>%d{HH:mm:ss.SSS} %-5level : %msg%n</Pattern>
        </encoder>
    </appender>

    <logger name="script-output" level="info">
        <appender-ref ref="USER_LOG" />
    </logger>

    <root level="all">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>